{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended", 
        "standard"
    ],
    "plugins": [ "no-only-tests" ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        // Built-in rules
        "indent": ["error", 4],
        "object-shorthand": ["error"],

        // plugin:no-only-tests
        "no-only-tests/no-only-tests": "error"

    }
}
